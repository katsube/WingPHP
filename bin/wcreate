//---------------------------------
// Arguments
//---------------------------------
//---------------------
// Usage
//---------------------
if( $argc === 1 || preg_match('/^help$/', $argv[1]) ){
    usage();
    exit(0);
}

//---------------------
// Validation
//---------------------
//mode
if( empty($argv[1]) || !preg_match('/^controller|model$/', $argv[1]) ){
    errormsg("empty or unknown mode".$argv[1]);
    exit(1);
}
else{
    $mode = $argv[1];
}

//class name
if( empty($argv[2]) || !preg_match('/^[a-zA-Z_][a-zA-Z0-9_]{1,}$/', $argv[2]) ){
    errormsg("empty or invalid classname".$argv[2]);
    exit(1);
}
else{
    $classname = $argv[2];
}


//---------------------------------
// Initialize
//---------------------------------
require_once('_common.php');

//---------------------------------
// Run Create
//---------------------------------
run_create($mode, $classname);


/**
 * Run Create
 */
function run_create($mode, $classname){

    //---------------------------------
    // controller mode
    //---------------------------------
    if($mode === 'controller'){
    }
    //---------------------------------
    // model mode
    //---------------------------------
    else if($mode === 'model'){
    }
    //---------------------------------
    // UnKnown mode
    //---------------------------------
    else{
        errormsg("UnKnown Command ($mode)");
    }
}


/**
 * Usage
 */
function usage(){
    echo "Usage: wcreate {controller|model} [class name]\n";
    echo "  Example.\n";
    echo "    $ wcreate controller foo\n";
    echo "       -> controller/foo.php\n";
    echo "    $ wcreate model bar\n";
    echo "       -> model/bar.php\n";
}
