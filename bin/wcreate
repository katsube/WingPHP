/**
 * WCreate
 *
 * シンプルななController, Modelを作成する。
 * wpkgのラッパー
 *
 *     $ wcreate ctrl  {class name}
 *     $ wcreate model {class name}
 *
 * 上記は以下と等価
 *     $ wpkg create controller {class name}
 *     $ wpkg create model {class name}
 * 
 * @package    WCreate
 * @copyright  2016 WingPHP
 * @author     M.Katsube < katsubemakito@gmail.com >
 * @license    The MIT License
 * @access     public
 */

//---------------------------------
// Initialize
//---------------------------------
//---------------------
// library
//---------------------
require_once('_common.php');


//---------------------
// Global valiable
//---------------------
$pkg_name      = '';
$pkg_classname = '';


//---------------------------------
// Usage
//---------------------------------
if( $argc === 1 || empty($argv[1]) || preg_match('/^(help|h|usage)$/', $argv[1]) ){
    usage();
    exit(0);
}

//---------------------------------
// Validation
//---------------------------------
//---------------------
// pkg name ($argv[1])
//---------------------
if( !preg_match('/^controller|ctrl|model/', $argv[1]) ){
    errormsg("unknown type: ".$argv[1]);
    exit(1);
}
else{
    $pkg_name = $argv[1];

    //shortcut
    if($pkg_name === 'ctrl'){
        $pkg_name = 'controller';
    }
}


//------------------------------
//class name ($argv[2]) 
//------------------------------
if( !checkClassName($argv[2]) ){
    errormsg("invalid class name: ".$argv[2]);
    exit(1);
}
else{
    $pkg_classname = $argv[2];
}



//---------------------------------
// Run
//---------------------------------
echo `wpkg create $pkg_name $pkg_classname`;
exit(0);



/**
 *  validation to class name
 * 
 * @param  string   $name
 * @return boolean
 */
function checkClassName($name){
    if(preg_match('/^[a-zA-Z_][a-zA-Z0-9_]{1,128}$/', $name)){
        return(true);
    }
    else{
        return(false);
    }
}


/**
 * Usage
 */
function usage(){
    echo "Usage: wcreate {ctrl|controller|model} [class name]\n";
}
