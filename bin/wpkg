/**
 * WPackage
 *
 * テンプレートからModel,View,Controller作成する。
 *
 *     $ wpkg create {packagename} [class name]
 *     $ wpkg help
 * 
 * @package    WPackage
 * @copyright  2016 WingPHP
 * @author     M.Katsube < katsubemakito@gmail.com >
 * @license    The MIT License
 * @access     public
 */

//---------------------------------
// Initialize
//---------------------------------
//---------------------
// library
//---------------------
require_once('_common.php');
require_once('../controller/base.php');


//---------------------
// Global valiable
//---------------------
$pkg_command   = '';      //"list" or "create"
$pkg_name      = '';      
$pkg_classname = '';


//---------------------------------
// Usage
//---------------------------------
if( $argc === 1 || empty($argv[1]) || preg_match('/^(help|h|usage)$/', $argv[1]) ){
    usage();
    exit(0);
}

//---------------------------------
// Validation
//---------------------------------
//---------------------
// command ($argv[1])
//---------------------
if( !preg_match('/^list|create/', $argv[1]) ){
    errormsg("unknown command: ".$argv[1]);
    exit(1);
}
else{
    $pkg_command = $argv[1];
}


//-------------------------
// package name ($argv[2])
//-------------------------
if( $pkg_command === 'create' ){

    //------------------------------
    // package name ($argv[2])
    //------------------------------
    if( ! existsPackage($argv[2]) ){
        errormsg("empty argument or unknown package name: ".$argv[2]);
        exit(1);
    }
    else {
        $pkg_name = $argv[2];
    }

    //------------------------------
    //class name ($argv[3]) option
    //------------------------------
    $pkg_classname = ( empty($argv[3]) )?  $pkg_name:$argv[3];
    if( !checkClassName($pkg_classname) ){
        errormsg("invalid class name: ".$pkg_classname);
        exit(1);
    }
}


//---------------------------------
// Run
//---------------------------------
if( $pkg_command === 'create' ){
    run_create($pkg_name, $pkg_classname);
}
else if($pkg_command === 'list'){
    run_list();
}
else{
    errormsg("unknown command: ".$pkg_command);
}

exit(0);




/**
 * Run install
 */
function run_create($pkg_name, $pkg_classname){

    $config = readBuildSettings($pkg_name);
    if($config === false){
        errormsg('Can not open build.json');
        exit(1);
    }

    foreach($config['task'] as $task){
        switch($task[0]){
            case 'generate':
                task_generate($pkg_name, $pkg_classname, $task);
                break;
            
            case 'copy':
                break;
            
            case 'sql':
                break;
            
            default:
                break;
        }
    }
    
}


/**
 * Run list
 */
function run_list(){
    ;
}




/**
 * validation to package name
 * 
 * @param  string $name
 * @return boolean
 */
function checkPackageName($name){
    if(preg_match('/^[a-zA-Z_][a-zA-Z0-9_]{1,}$/', $name)){
        return(true);
    }
    else{
        return(false);
    }
}

/**
 * check exists package name
 * 
 * @param  string $name
 * @return boolean
 */
function existsPackage($name){
    if(!empty($name) && checkPackageName($name) && is_dir("package/$name/")){
        return(true);
    }
    else{
        return(false);
    }
}


/**
 *  validation to class name
 * 
 * @param  string   $name
 * @return boolean
 */
function checkClassName($name){
    if(preg_match('/^[a-zA-Z_][a-zA-Z0-9_]{1,128}$/', $name)){
        return(true);
    }
    else{
        return(false);
    }
}


/**
 *  Get BuildSettings
 * 
 * @param  string   $pkg_name
 * @return object
 */
function readBuildSettings($name){
    $file = sprintf('package/%s/build.json', $name);
    
    if( !is_file($file) )
        return(false);

    $buff = file_get_contents($file);
    if( $buff !== false ){
        return( json_decode($buff, true) );
    }
    else{
        return(false);
    }
}


/**
 *  [task] generate
 * 
 * @param  string $pkg   package name
 * @param  string $name  class name
 * @param  array  $task    0:command  "generate"
 *                       , 1:type     "controller" or "model"
 *                       , 2:tpl      template file path
 *                       , 3:prefix   prefix
 * @return boolean
 */
function task_generate($pkg, $name, $task){
    $type   = $task[1];
    $tpl    = $task[2];
    $prefix = $task[3];

    $ctrl = new BaseController();
    $ctrl->assign('name', ucfirst($name));
    $ctrl->smarty()->configLoad(realpath('wpkg.ini'), 'template');
    $buff = $ctrl->smarty()->fetch(realpath("package/$pkg/$tpl"));
    
    $putfile = sprintf('../%s/%s.%s', $type, $name, $prefix);
    if( $putfile === false ){
        errormsg("realpath");
        exit(1);
    }
    if( is_file($putfile) ){
        errormsg("exists file: $putfile");
        exit(1);
    }

    if( file_put_contents($putfile, $buff) !== false ){
        task_ok("cretae $putfile");
        return(true);
    }
    else {
        errormsg("Can not write file: $putfile");
        exit(1);
    }

}

/**
 *  [task] Print OK
 * 
 * @param  string $msg
 * @return void
 */

function task_ok($msg){
    printf("OK -> %s\n", $msg);
}

/**
 * Usage
 */
function usage(){
    echo "Usage: wcreate {controller|model} [class name]\n";
    echo "       wcreate package install {package name} [class name]\n";
    echo "       wcreate package list\n";
    echo " \n";
    echo "  Example.\n";
    echo "    ** make basic controller|model **\n";
    echo "       $ wcreate controller foo\n";
    echo "         -> controller/foo.php\n";
    echo "       $ wcreate model bar\n";
    echo "         -> model/bar.php\n";
    echo " \n";
    echo "    *** install package **\n";
    echo "      $ wcreate package install user\n";
    echo "         -> model/user.php\n";
    echo "         -> controller/user.php\n";
    echo "         -> wsql bin/package/user/user.sql\n";
    echo " \n";
    echo "    *** view package **\n";
    echo "      $ wcreate package list\n";
}
