/**
 * WPackage
 *
 * テンプレートからModel,View,Controller作成する。
 *
 *     $ wpkg install {packagename} [class name]
 *     $ wpkg help
 * 
 * @package    WPackage
 * @copyright  2016 WingPHP
 * @author     M.Katsube < katsubemakito@gmail.com >
 * @license    The MIT License
 * @access     public
 */
namespace WPackage;

//---------------------------------
// Initialize
//---------------------------------
//---------------------
// library
//---------------------
require_once('_common.php');
require_once('../controller/base.php');


//---------------------
// Global valiable
//---------------------
$pkg_command   = '';      //"list" or "install"
$pkg_name      = '';      
$pkg_classname = '';


//---------------------------------
// Usage
//---------------------------------
if( $argc === 1 || empty($argv[1]) || preg_match('/^(help|h|usage)$/', $argv[1]) ){
    usage();
    exit(0);
}

//---------------------------------
// Validation
//---------------------------------
//---------------------
// command ($argv[1])
//---------------------
if( preg_match('/^list|install$/', $argv[1]) ){
    errormsg("unknown command: ".$argv[1]);
    exit(1);
}
else{
    $pkg_command = $argv[1];
}


//-------------------------
// package name ($argv[2])
//-------------------------
if( $pkg_command === 'install' ){

    //------------------------------
    // package name ($argv[2])
    //------------------------------
    if( ! existsPackage($argv[2]) ){
        errormsg("empty or unknown package name: ".$argv[2]);
        exit(1);
    }
    else {
        $pkg_name = $argv[2];
    }

    //------------------------------
    //class name ($argv[3]) option
    //------------------------------
    if( empty($argv[3]) ){
        $pkg_classname = $pkg_name;
    }
    else if( existClassName($argv[3]) ){
        errormsg("invalid or exists class name: ".$argv[3]);
        exit(1);
    }
    else{
        $pkg_classname = $argv[3];
    }
}


//---------------------------------
// Run
//---------------------------------
if( $pkg_command === 'list' ){
    run_install($pkg_name, $pkg_classname);
}
else{
    run_list();
}

exit(0);




/**
 * Run install
 */
function run_install($pkg_name, $pkg_classname){

    $classname = ucfirst( strtolower($pkg_classname) );
    $filename  = sprintf('%s.php', strtolower($pkg_classname));
    
    $ctrl = new BaseController();
    $ctrl->assign('name', $classname);
    $ctrl->smarty()->configLoad(realpath('package/wcreate.ini'));
    
    $ctrl->fetch(realpath('package/base/model.tpl'));
}


/**
 * Run list
 */
function run_list(){
    ;
}




/**
 * validation to package name
 * 
 * @param  string $name
 * @return boolean
 */
function checkPackageName($name){
    if(preg_match('/^[a-zA-Z_][a-zA-Z0-9_]{1,}$/', $name)){
        return(true);
    }
    else{
        return(false);
    }
}

/**
 * check exists package name
 * 
 * @param  string $name
 * @return boolean
 */
function existsPackage($name){
    if(!empty($name) && checkPackageName($name) && is_dir("package/$name/")){
        return(true);
    }
    else{
        return(false);
    }
}


/**
 *  validation to class name
 * 
 * @param  string   $name
 * @return boolean
 */
function checkClassName($name){
    if(preg_match('/^[a-zA-Z_][a-zA-Z0-9_]{1,}$/', $name)){
        return(true);
    }
    else{
        return(false);
    }
}

/**
 *  check exists class name
 * 
 * @param  string   $pkg_name
 * @param  string   $pkg_classname
 * @return boolean
 */
function existsClassName($pkg_name, $pkg_classname){
    if( !existsPackage($pkg_name) || empty($pkg_classname) || !checkClassName($pkg_classname) ){
        return(false);
    }
    
    $config = readBuildSettings($pkg_name);

    $file   = sprintf('%s.php', strtolower($pkg_classname) );
    if( $config['body']['use']['model'] ){
        if( is_file("model/$file") )
            return(false);
    }
    if( $config['body']['use']['controller'] ){
        if( is_file("controller/$file") )
            return(false);
    }
    
    return(true);
}


/**
 *  Get BuildSettings
 * 
 * @param  string   $pkg_name
 * @return object
 */
function readBuildSettings($name){
    $file = sprintf('"package/%s/build.json', $name);
    
    if( !is_file($file) )
        return(false);

    $buff = file_get_contents($file);
    if( $buff !== false ){
        return( json_decode($buff) );
    }
    else{
        return(false);
    }
}


/**
 * Usage
 */
function usage(){
    echo "Usage: wcreate {controller|model} [class name]\n";
    echo "       wcreate package install {package name} [class name]\n";
    echo "       wcreate package list\n";
    echo " \n";
    echo "  Example.\n";
    echo "    ** make basic controller|model **\n";
    echo "       $ wcreate controller foo\n";
    echo "         -> controller/foo.php\n";
    echo "       $ wcreate model bar\n";
    echo "         -> model/bar.php\n";
    echo " \n";
    echo "    *** install package **\n";
    echo "      $ wcreate package install user\n";
    echo "         -> model/user.php\n";
    echo "         -> controller/user.php\n";
    echo "         -> wsql bin/package/user/user.sql\n";
    echo " \n";
    echo "    *** view package **\n";
    echo "      $ wcreate package list\n";
}
